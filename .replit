modules = ["python-3.11", "bash", "nodejs-20", "python3"]

[nix]
channel = "stable-25_05"
packages = ["cargo", "libiconv", "libxcrypt", "openssl", "pkg-config", "rustc"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Underwriting Wizard - Web"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Underwriting Wizard - Server"

[[workflows.workflow]]
name = "Underwriting Wizard - Web"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd web && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Underwriting Wizard - Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server && python -m uvicorn main:app --host 0.0.0.0 --port 8000 --reload"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 39447
externalPort = 3001

[[ports]]
localPort = 41629
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["npm", "start"]
build = ["npm", "run", "build"]
