PORT=8080
NODE_ENV=development
CORS_ORIGIN=https://app.lendwizely.com

# API Authentication
API_KEY_PARTNER=replace_me

# JWT Configuration
JWT_ISSUER=lw-bot
JWT_TTL_MIN=30

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL_PARSE=gpt-4o-mini

# Plaid Configuration
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox

# Database Configuration
DATABASE_URL=sqlite:///./data.db

# Encryption Configuration (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Cherry SMS Configuration
CHERRY_BASE_URL=https://api.cherrysms.com
CHERRY_API_KEY=your_cherry_api_key

# E-Signature Configuration
SIGN_PROVIDER=docusign
# or SIGN_PROVIDER=dropboxsign

# DocuSign Configuration (required if SIGN_PROVIDER=docusign)
DOCUSIGN_BASE=https://demo.docusign.net
DOCUSIGN_ACCOUNT_ID=your_docusign_account_id
DOCUSIGN_TOKEN=your_docusign_integration_key

# Dropbox Sign Configuration (required if SIGN_PROVIDER=dropboxsign)
DROPBOX_SIGN_API_KEY=your_dropbox_sign_api_key

# Webhook Configuration
LENDWIZELY_WEBHOOK_URL=https://app.lendwizely.com/api/bot-events