# Server Configuration
PORT=8080
NODE_ENV=development
LOG_LEVEL=info
REQUEST_TIMEOUT_MS=30000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ISSUER=lw-bot
JWT_TTL_MIN=30

# API Keys
API_KEY_PARTNER=replace_me_with_actual_partner_key

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL_PARSE=gpt-4o-mini
OPENAI_MODEL_REASON=gpt-4o-mini

# Plaid Configuration
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret-key
PLAID_ENV=sandbox
PLAID_PRODUCTS=transactions,statements

# Cherry SMS Configuration
CHERRY_API_KEY=your-cherry-sms-api-key
CHERRY_BASE_URL=https://api.cherrysms.com
CHERRY_WEBHOOK_SECRET=your-webhook-secret

# E-Sign Provider (choose one)
# DocuSign
DOCUSIGN_ACCOUNT_ID=your-docusign-account-id
DOCUSIGN_TOKEN=your-docusign-access-token
DOCUSIGN_BASE=https://demo.docusign.net

# OR Dropbox Sign
# DROPBOX_SIGN_API_KEY=your-dropbox-sign-api-key

# Background Check Provider
CLEAR_API_KEY=your-clear-api-key
CLEAR_BASE_URL=https://api.clear.com

# Database Configuration
DATABASE_URL=mysql://username:password@localhost:3306/lendwizely_bot
DB_HOST=localhost
DB_PORT=3306
DB_NAME=lendwizely_bot
DB_USER=username
DB_PASSWORD=password

# Redis Configuration (for job queue)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Webhook Configuration
PUBLIC_BASE_URL=https://api.yourbot.com
LENDWIZELY_WEBHOOK_URL=https://app.lendwizely.com/api/bot-events

# Monitoring & Security
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=30
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE_MB=25
MAX_REQUEST_SIZE_MB=2

# CORS Configuration
CORS_ORIGIN=https://app.lendwizely.com
CORS_CREDENTIALS=true